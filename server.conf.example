# Simple Web Server Configuration Example

# Server settings
listen 8080;
host 0.0.0.0;

# Default server (fallback when no server_name matches)
server {
    root public;
}

# Virtual host example 1
server {
    server_name example.com www.example.com;
    root sites/example.com;
}

# Virtual host example 2
server {
    server_name test.com;
    root sites/test.com;
}

# Virtual host example 3 - multiple domains to same folder
server {
    server_name blog.com myblog.com;
    root sites/blog;
}
